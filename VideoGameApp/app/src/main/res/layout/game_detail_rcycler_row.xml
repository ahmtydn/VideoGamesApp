<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/besinGorselId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:minHeight="200dp"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ic_launcher_background">

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinİsmiDetayId"
        android:layout_below="@id/besinGorselId"
        android:textSize="20sp"
        android:text="Besin İsmi"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinKaloriDetayId"
        android:layout_below="@id/besinİsmiDetayId"
        android:textSize="18sp"
        android:text="Besin Kalori"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinKarbonhidratDetayId"
        android:layout_below="@id/besinKaloriDetayId"
        android:textSize="18sp"
        android:text="Besin Karbonhidrat"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinProteinDetayId"
        android:layout_below="@id/besinKarbonhidratDetayId"
        android:textSize="18sp"
        android:text="Besin Protein"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >

    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/besinYagDetayId"
        android:layout_below="@id/besinProteinDetayId"
        android:textSize="18sp"
        android:text="Besin Yağ"
        android:textStyle="normal"
        android:layout_centerHorizontal="true"
        android:layout_margin="7dp"
        >

    </TextView>
</RelativeLayout>